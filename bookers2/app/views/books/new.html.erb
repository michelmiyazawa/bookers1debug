<h1>Books#new</h1>
<p>Find me in app/views/books/new.html.erb</p>
<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>

    <%= f.text_field :title %>
    <%= f.text_area :opinion %>
    <%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    <% end %>