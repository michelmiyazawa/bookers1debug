<div class='body'>
    <div class='container'>
<%= render 'users/list', user: @user, book: Book.new %>
  <div class='col-xs-9'>
    <h2>Book detail</h2>
    <table class='table'>
        <tr>
          <td><%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag @book.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %>
            <div><%= @user.name %></div>
          <% end %></td>
          
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if user_signed_in? && current_user.id == @book.user_id %>
            <th><%= link_to "Edit", edit_book_path(@book) %></th>
            <th><%= link_to "Destroy", book_path(@book), method: :delete , data: {confirm: "本当に消しますか？"}%></th>
          <% end %>
        </tr>
        <tr>

        </tr>
      </tbody>
    </table>
  </div>